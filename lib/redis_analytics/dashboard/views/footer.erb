function changeTimeFrame(range)
{
switch(range)
{
case 'day':
    visits_area.setData(<%=@data[:day][:visits_new_visits][:plot].to_json%>);
    unique_visits_line.setData(<%=@data[:day][:unique_visits].to_json%>);
